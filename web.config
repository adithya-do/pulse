<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="FastCgiModule"
           scriptProcessor="C:\inetpub\wwwroot\pulse\.venv\Scripts\python.exe|C:\inetpub\wwwroot\pulse\.venv\Lib\site-packages\wfastcgi.py"
           resourceType="Unspecified" requireAccess="Script" />
    </handlers>
  </system.webServer>

  <!-- wfastcgi looks here for the WSGI entry point and PYTHONPATH -->
  <appSettings>
    <add key="WSGI_HANDLER" value="app.app:application" />
    <add key="PYTHONPATH"   value="C:\inetpub\wwwroot\pulse" />

    <!-- Pulse app config (you can move these to system env vars later) -->
    <add key="APP_DB_USER" value="APP_USER" />
    <add key="APP_DB_PASSWORD" value="CHANGEME" />
    <add key="APP_DB_DSN" value="host:1521/service" />
    <add key="APP_DB_MODE" value="thin" />
    <add key="APP_SECRET_KEY" value="(generate)" />
    <add key="APP_FERNET_KEY" value="(base64 32-byte key)" />
    <add key="SMTP_SERVER" value="smtp.yourco.local" />
    <add key="SMTP_PORT" value="25" />
    <add key="SMTP_USE_TLS" value="0" />
    <add key="SMTP_USERNAME" value="" />
    <add key="SMTP_PASSWORD" value="" />
    <add key="SQLCMD_PATH" value="sqlcmd" />
  </appSettings>
</configuration>
